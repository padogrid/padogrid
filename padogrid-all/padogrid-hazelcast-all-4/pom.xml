<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>padogrid.addon</groupId>
		<artifactId>padogrid-all</artifactId>
		<version>0.9.17-SNAPSHOT</version>
	</parent>
	<artifactId>padogrid-hazelcast-all-4</artifactId>
	<packaging>jar</packaging>
	<name>${project.artifactId}</name>
	<description>Build all jar</description>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<spring.version>5.2.1.RELEASE</spring.version>
		<avro.version>1.9.2</avro.version>
		<skipTests>true</skipTests>
	</properties>
	
	<repositories>
		<!-- Hazelcast private repo -->
		<repository>
			<id>Hazelcast Private Release Repository</id>
			<url>https://repository.hazelcast.com/release/</url>
		</repository>
		<repository>
			<id>confluent</id>
			<url>https://packages.confluent.io/maven/</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.2.0</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>${maven.jar.plugin.version}</version>
				<configuration>
					<archive>
						<index>true</index>
						<compress>true</compress>
						<manifest>
							<addClasspath>false</addClasspath>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
						</manifest>
					</archive>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>${maven.shade.plugin.version}</version>
				<executions>
					<execution>
						<id>shade-artifacts</id>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<shadedArtifactId>padogrid-hazelcast-all-4</shadedArtifactId>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<createDependencyReducedPom>true</createDependencyReducedPom>
							<minimizeJar>false</minimizeJar>
							<createSourcesJar>true</createSourcesJar>
							<artifactSet>
								<includes>
									<include>padogrid.addon:padogrid-common:*</include>
									<include>padogrid.addon:padogrid-tools:*</include>
									<include>padogrid.addon:hazelcast-addon-common:*</include>
									<include>padogrid.addon:hazelcast-addon-core-4:*</include>
								</includes>
							</artifactSet>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>padogrid.addon</groupId>
						<artifactId>padogrid-common</artifactId>
						<version>${project.version}</version>
					</dependency>
					<dependency>
						<groupId>padogrid.addon</groupId>
						<artifactId>padogrid-tools</artifactId>
						<version>${project.version}</version>
					</dependency>
					<dependency>
						<groupId>padogrid.addon</groupId>
						<artifactId>hazelcast-addon-common</artifactId>
						<version>${project.version}</version>
					</dependency>
					<dependency>
						<groupId>padogrid.addon</groupId>
						<artifactId>hazelcast-addon-core-4</artifactId>
						<version>${project.version}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>${maven.javadoc.plugin.version}</version>
				<!-- <configuration combine.self="override"/> -->
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>padogrid.addon</groupId>
			<artifactId>padogrid-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>padogrid.addon</groupId>
			<artifactId>padogrid-tools</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>padogrid.addon</groupId>
			<artifactId>hazelcast-addon-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>padogrid.addon</groupId>
			<artifactId>hazelcast-addon-core-4</artifactId>
			<version>${project.version}</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/io.debezium/debezium-core -->
		<dependency>
			<groupId>io.debezium</groupId>
			<artifactId>debezium-core</artifactId>
			<version>1.2.0.Final</version>
		</dependency>

		<!-- Avro -->
		<dependency>
			<groupId>org.apache.avro</groupId>
			<artifactId>avro</artifactId>
			<version>${avro.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.avro</groupId>
			<artifactId>avro-tools</artifactId>
			<version>${avro.version}</version>
		</dependency>

		<!-- Confluent Kafka Connect Avro -->
		<dependency>
			<groupId>io.confluent</groupId>
			<artifactId>kafka-connect-avro-data</artifactId>
			<version>5.5.1</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.json/json -->
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20200518</version>
		</dependency>
	</dependencies>

</project>
