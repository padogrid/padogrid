#
# The environment variables set in this file are used by docker-compose.yaml to launch 
# Management Center and servers.  
#

# -------------------------------------------------------
# Begin: Mosquitto Addon Environment Variables
# -------------------------------------------------------

# Container server (member) port number. default: 1883
SERVER_PORT=1883

# Docker cluster name
CLUSTER_NAME="${CLUSTER_NAME}"

# -------------------------------------------------------
# End: Mosquitto Addon Environment Variables
# -------------------------------------------------------

# -------------------------------------------------------
# Begin: Mosquitto Docker Environment Variables
# -------------------------------------------------------

# TLS flag
TLS_ENABLED="false"

# Class path
CLASSPATH="/padogrid/plugins/*:/padogrid/lib/*"

# Simulator
PADOGRID_SIMULATOR_CONFIG_FILE="/padogrid/etc/simulator.yaml"

# -------------------------------------------------------
# End: Mosquitto Docker Environment Variables
