<?xml version="1.0" encoding="UTF-8"?>
<hazelcast-client
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.hazelcast.com/schema/client-config
                               http://www.hazelcast.com/schema/client-config/hazelcast-client-config-3.12.xsd"
	xmlns="http://www.hazelcast.com/schema/client-config">

	<instance-name>PadoGrid-stub</instance-name>
	<network>
		<cluster-members>
			<address>localhost:5701</address>
			<address>localhost:5702</address>
		</cluster-members>
	</network>
	<connection-strategy>
		<connection-retry>
			<max-backoff-millis>5000</max-backoff-millis>
			<fail-on-max-backoff>true</fail-on-max-backoff>
		</connection-retry>
	</connection-strategy>
</hazelcast-client>
