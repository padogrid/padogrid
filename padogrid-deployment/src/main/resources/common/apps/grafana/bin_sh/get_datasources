SCRIPT_DIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"
. $SCRIPT_DIR/.addonenv.sh

EXECUTABLE="`basename $0`"

if [ "$HELP" == "true" ]; then
cat <<EOF

WORKSPACE
   $PADOGRID_WORKSPACE

NAME
   ./$EXECUTABLE - Display all data sources found in Grafana

SYNOPSIS
   ./$EXECUTABLE [-?]

DESCRIPTION
   Displays all data sources found in Grafana.

DEFAULT
   ./$EXECUTABLE

EOF
exit
fi

curl -sS $GRAFANA_URL_REST/api/datasources |jq .
