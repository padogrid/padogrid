SCRIPT_DIR="$(cd -P -- "$(dirname -- "$0")" && pwd -P)"
. $SCRIPT_DIR/.addonenv.sh

EXECUTABLE="`basename $0`"

__options()
{
   echo "-rwe -all -quiet -?"
}

if [ "$OPTIONS" == "true" ]; then
   __options
   exit
fi

if [ "$RWE_ARG" != "" ]; then
   RWE=$RWE_ARG
else
   RWE=$(basename $PADOGRID_WORKSPACES_HOME)
fi

if [ "$HELP" == "true" ]; then
cat <<EOF

WORKSPACE
   $PADOGRID_WORKSPACE

NAME
   $EXECUTABLE - Kill all workspaces in the specified RWE

WARNING
   This command forcifully kills all clusters in the specified RWE that may lead
   to data corruption.

SYNOPSIS
   $EXECUTABLE [-rwe rwe_name | -all] [-quiet] [-?]

DESCRIPTION
   Kills all workspaces by executing 'kill_workspace' on each workspace in the specified RWE.

OPTIONS
   -rwe rwe_name
             RWE name. If not specified, then kills the current RWE.

   -all
             Kills all running processes in each cluster. This options is passed on to each
             cluster, i.e., 'kill_cluster -all'.
             
   -quiet
             Quiet mode. Supresses the interactive prompt.

EOF
if [ "$MAN_SPECIFIED" == "false" ]; then
cat <<EOF
DEFAULT
   $EXECUTABLE -rwe $RWE

EOF
fi
cat <<EOF
SEE ALSO
EOF
   printSeeAlsoList "*rwe*" $EXECUTABLE
   exit
fi

if [ "$QUIET" == "false" ]; then
   echo ""
   echo "RWE: $RWE"
   echo ""
   echo -e "${CBrownOrange}WARNING:${CNone} This command kills all workspaces in the RWE. Do you want to continue?"
   echo "(Enter 'continue' + Enter to continue to kill all workspaces, or other keys to abort.)"
   read INPUT
   if [ "$INPUT" != "continue" ]; then
      echo "Command aborted."
      exit
   fi
fi


CURRENT_DIR="`pwd`"
CURRENT_WORKSPACE="`basename $PADOGRID_WORKSPACE`"
CURRENT_CLUSTER=$CLUSTER

__WORKSPACES=`list_workspaces -rwe $RWE`
__WORKSPACES=( $__WORKSPACES )

switch_rwe $RWE
let NUM_WORKSPACES=${#__WORKSPACES[@]};
for ((__i = 0; __i < $NUM_WORKSPACES; __i++)); do
   __WORKSPACE="${__WORKSPACES[$__i]}"
   kill_workspace -workspace $__WORKSPACE "$@"
done
if [ "$WORKSPACE" != "$CURRENT_WORKSPACE" ]; then
   switch_workspace $CURRENT_WORKSPACE
   switch_cluster $CLUSTER
   cd $CURRENT_DIR
fi
